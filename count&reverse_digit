def reverse_digit(n):
    if n < 10:
        return n
    else:
        return reverse_digit(n // 10) + (n%10) * (10 ** (num_digit(n)-1))
        
def num_digit(n):
    if (n // 10) == 0:
        return 1
    else:
        return num_digit(n // 10) + 1

print(reverse_digit(123))
print(num_digit(123))
